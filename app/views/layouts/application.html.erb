<!DOCTYPE html>
<html>
  <head>
    <title>SimpleAirbnb</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-light bg-light">
      <span class="navbar-brand mb-0 h1"><%= link_to "SimpleAirbnb", flats_path %></span>
      <div class="d-inline-flex">
        <%= form_tag search_flats_path, method: :get, class:"form-inline" do %>
          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Find a flat"
          %>
          <%= submit_tag "Search", class: "btn btn-primary" %>
        <% end %>
        <%= link_to "Add flat", new_flat_path, class: "btn btn-primary ml-2" %>
      </div>
    </nav>

    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
